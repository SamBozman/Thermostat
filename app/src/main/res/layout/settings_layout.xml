<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#007700"
    tools:context="com.example.android.thermostat.Settings">

    <TextView
        android:id="@+id/textView"
        style="@style/icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="buttonHandler"
        android:text="@string/settings_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/button_s1"

        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/buttonshape"
        android:onClick="buttonHandler"
        android:padding="10dp"
        android:shadowColor="#030108"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="@string/go_home"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button_s2" />

    <Button
        android:id="@+id/button_s2"

        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/buttonshape"
        android:onClick="buttonHandler"
        android:padding="10dp"
        android:shadowColor="#030108"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="@string/date_time"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_s1"
        app:layout_constraintLeft_toRightOf="@+id/button_s3" />

    <Button
        android:id="@+id/button_s3"

        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/buttonshape"
        android:onClick="buttonHandler"
        android:padding="10dp"
        android:shadowColor="#030108"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="@string/s_schedules"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_s2"
        app:layout_constraintLeft_toRightOf="@+id/button_s4" />

    <Button
        android:id="@+id/button_s4"

        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/buttonshape"
        android:onClick="buttonHandler"
        android:padding="10dp"
        android:shadowColor="#030108"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="@string/s_temperature"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_s3" />


</android.support.constraint.ConstraintLayout>
